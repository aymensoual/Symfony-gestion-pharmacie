{% extends "CatalogueBundle::layout.html.twig" %}


{% block title %}CatalogueBundle:Client:index{% endblock %}

{% block body %}
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Gestion Clients</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">




                    <thead>
                        <tr>
                            <th>Code Client</th>
                            <th>Nom Client</th>
                            <th>Prenom Client</th>
                            <th>Telephone Client</th>
                            <th>Remarque</th>
                            <th>Medicament</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for client in client %}

                            <tr>
                                <td>{{client.code}}</td>
                                <td>{{client.nom}}</td>
                                <td>{{client.prenom}}</td>
                                <td>{{client.telephone}}</td>
                                <td>{{client.remarque}}</td>
                                <td>{{client.medicament.designation}}</td>

                                <td>  <a  href="{{path('edit3',{'token': client.token})}}" type="a" class="btn btn-outline-success btn-rounded waves-effect">Update </a>&nbsp &nbsp &nbsp

                                    <a href="{{path('delete3',{'token': client.token})}}" type="a" class="btn btn-outline-danger btn-rounded waves-effect">Delete</a></td>

                            </tr>
                        {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>

    </div>

{% endblock %}



