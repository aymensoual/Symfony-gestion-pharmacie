{% extends "CatalogueBundle::layout.html.twig" %}

{% block title %}UserBundle:User:index{% endblock %}

{% block body %}
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Data Table Example</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">




                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Dernier Connexion</th>
                            <th>Role</th>
                            <th>Etat</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        {% for user  in user %}



                            <tr>
                                <td>{{user.username}}</td>
                                <td>{{user.email}}</td>
                                <td>{{user.lastlogin|date('Y-m-d H:m:s')}}</td>
                                <td>{{user.roles[0]}}</td>

                                <td>{% if user.isenabled%}Activé{%else%}Désactivé {%endif%} </td>
                                <td>   <a  href="{{path('enabled2',{'token': user.token})}}" type="a" class="btn btn-outline-success btn-rounded waves-effect"> {% if user.isenabled%}Désactivé{%else%}Activé{%endif%}  </a>&nbsp &nbsp &nbsp

                                    <a href="{{path('delete2',{'token': user.token})}}" type="a" class="btn btn-outline-danger btn-rounded waves-effect">Delete</a> &nbsp &nbsp &nbsp
                                    <a href="{{path('role2',{'token': user.token})}}" type="a" class="btn btn-outline-warning btn-rounded waves-effect">Role</a>
                                </td>

                            </tr>
                        {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>

{% endblock %}



